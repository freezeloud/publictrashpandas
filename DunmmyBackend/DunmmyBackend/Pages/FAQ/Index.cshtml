@page ""
@model IndexModel
@{
    ViewData["Title"] = "Chci Recyklovat | Často kladené otázky";
}

<div class="alert alert-danger position-fixed" style="bottom: 0.5rem; right: 1rem;">
    TODO: Texty, Kontakt
</div>

<section class="py-5 bg-light">
    <div class="container">
        <header class=" text-center mb-4">
            <h2>Často kladené otázky</h2>
        </header>

        <div class="text-left">
            @for(var i = 0; i < IndexModel.GetQuestions().Count; ++i)
            {
            <div class="card mb-2 shadow-sm">
                <div class="card-header bg-white" id="faq-heading1-02">
                    <h5 class="mb-0">
                        <button class="btn btn-link btn-block text-left d-flex" type="button" data-toggle="collapse"
                            data-target="#faq-collapse1-@i" aria-expanded="false" aria-controls="faq-collapse1-@i"
                            style="white-space:normal !important; word-wrap: break-word">
                            @IndexModel.GetQuestion(i).question<img class="p-1 ml-auto my-auto" src="placeholder/icons/chevron-circle-down.svg"
                                alt=""></button>
                    </h5>
                </div>
                <div class="collapse" id="faq-collapse1-@i" aria-labelledby="faq-heading1-@i">
                    <div class="card-body border-bottom">@IndexModel.GetQuestion(i).answer</div>
                </div>
            </div>
            }
        </div>


        <partial name="_ContactForm" />
</section>