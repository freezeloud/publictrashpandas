<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DunmmyBackend</title>
    <link rel="stylesheet" href="~/css/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/fontawesome/css/all.min.css" asp-append-version="true">
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <div class="col-4 pl-lg-0">
              <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link active" href="/">Domů<span class="sr-only">(current)</span></a></li>
                <li class="nav-item"><a class="nav-link" href="/Categories">Druhy odpadu</a></li>
                <li class="nav-item"><a class="nav-link" href="/FAQ">Často kladené otázky</a></li>
                <li class="nav-item"><a class="nav-link" href="/Kontakt">Kontakt</a></li>
              </ul>
            </div>
            <div class="col-4 navbar-nav text-center pr-0 d-none d-lg-block"><a class="navbar-brand mr-0" href="#">Chci
                    recyklovat</a></div>
            <div class="col-4 pr-lg-0 text-right">
                <a class="btn btn-secondary shadow-sm" href="/Map">Zobrazit mapu
                    <i class="fas fa-map-marked-alt ml-2"></i>
                </a>
            </div>
        </div>
        </div>
    </nav>
    <main class="main">
        @RenderBody()
    </main>

    <footer class="py-5 bg-light">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center flex-column flex-md-row border-bottom pb-2">
                <ul class="nav order-2 order-md-1">
                    <li class="nav-item"><a class="nav-link" href="/">Domů</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Categories">Druhy odpadu</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Map">Mapa</a></li>
                </ul>
                <h5 class="mr-0 mr-md-5 mb-0 order-1 order-md-2"><a href="/">Chci recyklovat</a></h5>
                <ul class="nav order-3 order-md-3">
                    <li class="nav-item"><a class="nav-link" href="/FAQ">Často kladené otázky</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Kontakt">Kontakt</a></li>
                </ul>
            </div>
            <div class="d-flex justify-content-center mt-2">
                <p class="mb-0 mt-2 small text-muted">© 2020 Chci recyklovat. All right reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://api.mapy.cz/loader.js"></script>
    <script>Loader.load()</script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/map-configuration.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>