<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DunmmyBackend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/fontawesome/css/all.min.css">
</head>
<body class=" bg-light">
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand d-lg-none" href="#">Pied Piper</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigations-02"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse justify-content-md-center" id="navigations-02">
            <div class="row w-100">
            <div class="col-4 pl-lg-0">
                <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link active" href="#">Domů<span class="sr-only">(current)</span></a></li>
                <li class="nav-item"><a class="nav-link" href="#">Druhy odpadu </a></li>
                <li class="nav-item"><a class="nav-link" href="#">Mapa</a></li>
                </ul>
            </div>
            <div class="col-4 navbar-nav text-center pr-0 d-none d-lg-block"><a class="navbar-brand mr-0" href="#">Chci recyklovat</a></div>
            <div class="col-4 pr-lg-0">
                <ul class="navbar-nav justify-content-end">
                <li class="nav-item"><a class="nav-link" href="#">Často kladené otázky</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Podpora</a></li>
                </ul>
            </div>
            </div>  
        </div>
    </nav>
    <div>
        <main class="main">
            @RenderBody()
        </main>
    </div>

    <footer class="py-5">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center flex-column flex-md-row border-bottom pb-2">
            <ul class="nav order-2 order-md-1">
                <li class="nav-item"><a class="nav-link" href="#">Domů</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Druhy odpadu</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Mapa</a></li>
            </ul>
            <h5 class="mr-0 mr-md-5 mb-0 order-1 order-md-2"><a href="#">Chci recyklovat</a></h5>
            <ul class="nav order-3 order-md-3">
                <li class="nav-item"><a class="nav-link" href="#">Často kladené otázky</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Podpora</a></li>
            </ul>
            </div>
            <div class="d-flex justify-content-center mt-2">
            <p class="mb-0 mt-2 small text-muted">© 2020 Chci recyklovat. All right reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://api.mapy.cz/loader.js"></script>
	<script>Loader.load()</script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/map-configuration.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
